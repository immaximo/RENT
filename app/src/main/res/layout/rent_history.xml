<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gainsboro"
    tools:context=".Activity.RentHistory">

    <!-- AppBarLayout containing the Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_scrollFlags="scroll|enterAlways">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="16dp"
            android:src="@drawable/back_arrow"
            android:contentDescription="Back"
            app:tint="@android:color/black"/>

        <TextView
            android:id="@+id/rent_history_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent History"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- RecyclerView for displaying the rent history -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rent_history_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="665dp"
        android:layout_marginTop="65dp"
        android:layout_weight="1"
        android:padding="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
